{
    "root": true,
    "env": {
        "browser": true,
        "node": true
    },
    "ignorePatterns": [
        "static/**/*"
    ],
    "rules": {
        "vue/attribute-hyphenation": "off",
        "eqeqeq": "off",
        "vue/component-tags-order": [
            "error",
            {
                "order": [
                    "template",
                    "style",
                    "script"
                ]
            }
        ]
    },
    "extends": [
        "@nuxtjs/eslint-config-typescript",
        "plugin:prettier-vue/recommended",
        "plugin:nuxt/recommended",
        "prettier"
    ]
}